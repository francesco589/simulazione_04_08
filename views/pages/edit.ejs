<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/output.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body class="">
    <header class=" bg-green-200 h-24 flex items-center justify-between p-3">
        <a href="/" class="font-bold text-4xl text-lime-700">DigitaX</a>

    </header>


    <section class="h-screen">
        <div class="bg-green-100 text-lg p-3 text-green-700">Edit mode</div>
        <div class="flex justify-center bg-green-100 py-4">
            <form class="flex flex-col items-center gap-2">
                <div>
                    <textarea name='text' class="rounded-md pl-3 bg-green-100 border border-green-700"
                        placeholder="post your message" name="" id="text" cols="30" rows="2"><%= post.text %></textarea>

                </div>

                <div class="flex flex-col justify-center gap-2 ">

                    <input id="name" value="<%= post.name %>" placeholder="Name" name="name" class="rounded-md pl-3 bg-green-100 border border-green-700"
                        type="text">


                </div>
                <button id="btn"
                    class="bg-lime-700 p-2 font-semibold text-green-200 rounded-md w-28">Save</button>
            </form>
        </div>
        </div>
        <section class="flex flex-col items-center gap-3 p-5 bg-green-300 h-full">
           
        </section>

    </section>
<script>
    const $ = (id) => document.getElementById(id)
    const id = '<%= post.id %>'
    console.log(id)

    const btn = $('btn')
    const text = $('text').value
    const name = $('name').value

    btn.addEventListener('click', async (e)=>{
        e.preventDefault()
        const data = {
            text,
            name
        }
       
        const obj = await axios.put('/one/'+id, data)
        resp.json(obj)

    })


</script>
</body>

</html>